<document>
  <cms:if condition="$template['type'] == 'plain'">
    <a href="url_Make('','media', array('id', $params['id']))" cms:eval="href">
      <cms:var param="title" multilanguage="yes"/>
    </a>
  </cms:if>

  <cms:if condition="$template['type'] == 'list'">
    <li>
      <a href="url_Make('advertisement','media', array('id', $params['id']))" cms:eval="href">
        <cms:var param="title" multilanguage="yes"/>
      </a>
    </li>
  </cms:if>
</document>