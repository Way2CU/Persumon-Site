<document>
  <cms:desktop>
    <img 
      src="gallery::getThumbnailById($params['id'], null, 120 , Thumbnail::CONSTRAIN_HEIGHT)"
      alt="$params['title'][$language]"
      cms:eval="src,alt"
      />
  </cms:desktop>

  <cms:mobile>
    <img 
      src="gallery::getThumbnailById($params['id'], null, 100 , Thumbnail::CONSTRAIN_HEIGHT)"
      alt="$params['title'][$language]"
      cms:eval="src,alt"
      />
  </cms:mobile>
</document>